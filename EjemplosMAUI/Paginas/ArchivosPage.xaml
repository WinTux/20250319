<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemplosMAUI.Paginas.ArchivosPage"
             Title="Archivos">
    <VerticalStackLayout>
        <Label 
            Text="Manejo de archivos"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image x:Name="imagen" HeightRequest="250" HorizontalOptions="Center"/>
        <Button 
            Text="Cargar imagen" 
            Clicked="OnCargarImagenClic"
            HorizontalOptions="Fill" />
        <Button 
            Text="Cargar imagenes" 
            Clicked="OnCargarImagenesClic"
            HorizontalOptions="Fill" />
        <Button 
            Text="Cargar documentos PDF" 
            Clicked="OnCargarPersonalizadoClic"
            HorizontalOptions="Fill" /> 
    </VerticalStackLayout>
</ContentPage>